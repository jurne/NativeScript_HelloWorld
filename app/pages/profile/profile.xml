<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" navigatedTo="onNavigatedTo" actionBarHidden="true">
    <StackLayout>
        <Label class="title" text="My Profile" textWrap="true" />
        <GridLayout rows="*,*,*,*,*" columns="*,*" class="content" >

            <StackLayout row="0" col="0">
                <Label text="Name" textWrap="true" />
            </StackLayout>
            <StackLayout row="0" col="1">
                 <Label text="{{ name }}" textWrap="true" />
                
            </StackLayout>
            <StackLayout row="1" col="0">
                 <Label text="Nickname" textWrap="true" />
                
            </StackLayout>
            <StackLayout row="1" col="1">
                 <Label text="{{ nickname }}" textWrap="true" />
                
            </StackLayout>
            <StackLayout row="2" col="0">
                <Label text="Number of repos" textWrap="true" />
            </StackLayout>
            <StackLayout row="2" col="1">
                <Label text="{{ repositories }}" textWrap="true" />
            </StackLayout>
             <StackLayout row="3" col="0">
                <Label text="Number of followers" textWrap="true" />
            </StackLayout>
            <StackLayout row="3" col="1">
                <Label text="{{ followers }}" textWrap="true" />
            </StackLayout>
             <StackLayout row="4" colspan="2">
                <Image src="https://avatars1.githubusercontent.com/u/36663266?s=400&v=4" stretch="aspectFit" />
            </StackLayout>
            
        </GridLayout>

        
    </StackLayout>
</Page>